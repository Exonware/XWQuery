{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/xwfilters.schema.json",
  "title": "XWUIFilters Schema",
  "description": "Schema for XWUIFilters component - describes both conf_comp (component configuration) and data (component data)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "showPresets": {
          "type": "boolean",
          "description": "Whether to show filter presets",
          "default": true
        },
        "showCustomControls": {
          "type": "boolean",
          "description": "Whether to show custom filter controls",
          "default": true
        },
        "showPreview": {
          "type": "boolean",
          "description": "Whether to show preview image",
          "default": true
        },
        "imageElement": {
          "description": "HTMLElement or selector string for image element to apply filters to"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "currentFilter": {
          "type": "string",
          "description": "Currently applied filter preset ID"
        },
        "customFilter": {
          "type": "object",
          "description": "Custom filter settings",
          "properties": {
            "brightness": {
              "type": "number",
              "description": "Brightness (0-200)",
              "minimum": 0,
              "maximum": 200
            },
            "contrast": {
              "type": "number",
              "description": "Contrast (0-200)",
              "minimum": 0,
              "maximum": 200
            },
            "saturation": {
              "type": "number",
              "description": "Saturation (0-200)",
              "minimum": 0,
              "maximum": 200
            },
            "hue": {
              "type": "number",
              "description": "Hue rotation (-180 to 180)",
              "minimum": -180,
              "maximum": 180
            },
            "blur": {
              "type": "number",
              "description": "Blur (0-10)",
              "minimum": 0,
              "maximum": 10
            },
            "sepia": {
              "type": "number",
              "description": "Sepia (0-100)",
              "minimum": 0,
              "maximum": 100
            },
            "grayscale": {
              "type": "number",
              "description": "Grayscale (0-100)",
              "minimum": 0,
              "maximum": 100
            },
            "invert": {
              "type": "number",
              "description": "Invert (0-100)",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "imageUrl": {
          "type": "string",
          "description": "Image URL for preview"
        }
      }
    }
  },
  "id": "XWUIFilters"
}
