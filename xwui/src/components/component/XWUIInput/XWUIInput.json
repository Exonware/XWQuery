{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "XWUIInput",
  "name": "XWUI Input Component",
  "description": "Text input component with various types (text, password, email, number, search, tel, url), sizes, variants, and states. Supports labels, helper text, error messages, prefixes, suffixes, clear button, and password visibility toggle.",
  "path": "input.text",
  "tags": ["input", "text", "form", "desktop", "mobile", "tablet"],
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["text", "password", "email", "number", "search", "tel", "url"],
          "default": "text",
          "description": "Input type"
        },
        "size": {
          "type": "string",
          "enum": ["small", "medium", "large"],
          "default": "medium",
          "description": "Input size"
        },
        "variant": {
          "type": "string",
          "enum": ["outlined", "filled", "underlined"],
          "default": "outlined",
          "description": "Input visual variant"
        },
        "disabled": {
          "type": "boolean",
          "default": false,
          "description": "Disable the input"
        },
        "readonly": {
          "type": "boolean",
          "default": false,
          "description": "Make input read-only"
        },
        "required": {
          "type": "boolean",
          "default": false,
          "description": "Mark input as required"
        },
        "error": {
          "type": "boolean",
          "default": false,
          "description": "Show error state"
        },
        "fullWidth": {
          "type": "boolean",
          "default": false,
          "description": "Make input full width"
        },
        "clearable": {
          "type": "boolean",
          "default": false,
          "description": "Show clear button"
        },
        "showPasswordToggle": {
          "type": "boolean",
          "default": true,
          "description": "Show password visibility toggle (for password type)"
        },
        "prefix": {
          "type": ["string", "object"],
          "description": "Prefix element (string or HTMLElement) to display before input"
        },
        "suffix": {
          "type": ["string", "object"],
          "description": "Suffix element (string or HTMLElement) to display after input"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name for the component"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "value": {
          "type": "string",
          "description": "Input value"
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text"
        },
        "label": {
          "type": "string",
          "description": "Input label text"
        },
        "helperText": {
          "type": "string",
          "description": "Helper text shown below input"
        },
        "errorText": {
          "type": "string",
          "description": "Error message text"
        },
        "name": {
          "type": "string",
          "description": "Form input name attribute"
        },
        "id": {
          "type": "string",
          "description": "Input element ID"
        },
        "min": {
          "type": "number",
          "description": "Minimum value (for number type)"
        },
        "max": {
          "type": "number",
          "description": "Maximum value (for number type)"
        },
        "step": {
          "type": "number",
          "description": "Step value (for number type)"
        },
        "maxLength": {
          "type": "number",
          "description": "Maximum character length"
        },
        "pattern": {
          "type": "string",
          "description": "Validation pattern (regex)"
        },
        "autocomplete": {
          "type": "string",
          "description": "Autocomplete attribute value"
        }
      }
    }
  }
}

