{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "apiKey": {
      "type": "string",
      "description": "Google Maps API key"
    },
    "placeholder": {
      "type": "string",
      "default": "Enter location or click on map"
    },
    "showMap": {
      "type": "boolean",
      "default": true
    },
    "mapHeight": {
      "type": "string",
      "default": "300px"
    },
    "className": {
      "type": "string"
    },
    "value": {
      "type": "object",
      "properties": {
        "lat": {
          "type": "number"
        },
        "lng": {
          "type": "number"
        }
      }
    },
    "address": {
      "type": "string"
    }
  },
  "id": "XWUIInputLocation"
}
