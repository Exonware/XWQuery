{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "XWUIMobileStepper",
  "name": "XWUI Mobile Stepper Component",
  "description": "Mobile-optimized stepper component with dots, progress bar, or text indicators. Includes navigation buttons for moving between steps. Perfect for mobile onboarding flows and multi-step forms.",
  "path": "navigation.stepper",
  "tags": ["navigation", "stepper", "mobile", "progress", "steps", "dots", "desktop", "tablet"],
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "variant": {
          "type": "string",
          "enum": ["text", "dots", "progress"],
          "description": "Stepper variant - text shows step numbers, dots shows dot indicators, progress shows progress bar",
          "default": "dots"
        },
        "position": {
          "type": "string",
          "enum": ["static", "bottom", "top"],
          "description": "Position of the stepper",
          "default": "static"
        },
        "steps": {
          "type": "number",
          "description": "Total number of steps",
          "default": 0,
          "minimum": 0
        },
        "activeStep": {
          "type": "number",
          "description": "Current active step (0-indexed)",
          "default": 0,
          "minimum": 0
        },
        "nextButtonText": {
          "type": "string",
          "description": "Text for next button",
          "default": "Next"
        },
        "backButtonText": {
          "type": "string",
          "description": "Text for back button",
          "default": "Back"
        },
        "showNextButton": {
          "type": "boolean",
          "description": "Whether to show next button",
          "default": true
        },
        "showBackButton": {
          "type": "boolean",
          "description": "Whether to show back button",
          "default": true
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class names"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "onNext": {
          "type": "object",
          "description": "Callback function when next is clicked (set programmatically, not via JSON)"
        },
        "onBack": {
          "type": "object",
          "description": "Callback function when back is clicked (set programmatically, not via JSON)"
        },
        "nextButtonDisabled": {
          "type": "boolean",
          "description": "Whether next button is disabled",
          "default": false
        },
        "backButtonDisabled": {
          "type": "boolean",
          "description": "Whether back button is disabled",
          "default": false
        }
      }
    }
  }
}

