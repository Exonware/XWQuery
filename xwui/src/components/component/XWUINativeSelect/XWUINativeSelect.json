{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/xwui-native-select.schema.json",
  "title": "XWUINativeSelect Schema",
  "description": "Schema for XWUINativeSelect component - describes both conf_comp (component configuration) and data (component data)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "size": {
          "type": "string",
          "enum": [
            "small",
            "medium",
            "large"
          ],
          "description": "Select size",
          "default": "medium"
        },
        "variant": {
          "type": "string",
          "enum": [
            "outlined",
            "filled"
          ],
          "description": "Select variant style",
          "default": "outlined"
        },
        "disabled": {
          "type": "boolean",
          "description": "Whether the select is disabled",
          "default": false
        },
        "multiple": {
          "type": "boolean",
          "description": "Whether multiple options can be selected",
          "default": false
        },
        "fullWidth": {
          "type": "boolean",
          "description": "Whether the select should take full width",
          "default": false
        },
        "error": {
          "type": "boolean",
          "description": "Whether to show error state",
          "default": false
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name"
        },
        "required": {
          "type": "boolean",
          "description": "Whether the select is required",
          "default": false
        },
        "autofocus": {
          "type": "boolean",
          "description": "Whether to autofocus the select",
          "default": false
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "options": {
          "type": "array",
          "description": "Select options or option groups",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "string"
                  },
                  "label": {
                    "type": "string"
                  },
                  "disabled": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "value",
                  "label"
                ]
              },
              {
                "type": "object",
                "properties": {
                  "label": {
                    "type": "string"
                  },
                  "options": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "value": {
                          "type": "string"
                        },
                        "label": {
                          "type": "string"
                        },
                        "disabled": {
                          "type": "boolean"
                        }
                      },
                      "required": [
                        "value",
                        "label"
                      ]
                    }
                  }
                },
                "required": [
                  "label",
                  "options"
                ]
              }
            ]
          }
        },
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ],
          "description": "Selected value(s)"
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text"
        },
        "label": {
          "type": "string",
          "description": "Label text"
        },
        "helperText": {
          "type": "string",
          "description": "Helper text below select"
        },
        "errorText": {
          "type": "string",
          "description": "Error text below select"
        },
        "name": {
          "type": "string",
          "description": "Name attribute for form submission"
        },
        "id": {
          "type": "string",
          "description": "ID attribute"
        }
      },
      "required": [
        "options"
      ]
    }
  },
  "id": "XWUINativeSelect"
}
