{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/xwreactionselector.schema.json",
  "title": "XWUIReactionSelector Schema",
  "description": "Schema for XWUIReactionSelector component - describes both conf_comp (component configuration) and data (component data)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "quickReactions": {
          "type": "array",
          "description": "Array of emoji strings for quick reactions",
          "items": {
            "type": "string"
          },
          "default": [
            "üëç",
            "‚ù§Ô∏è",
            "üòÑ",
            "üéâ",
            "üòÆ",
            "üò¢"
          ]
        },
        "showCount": {
          "type": "boolean",
          "description": "Whether to show reaction counts",
          "default": true
        },
        "showUserList": {
          "type": "boolean",
          "description": "Whether to show user list on hover",
          "default": false
        },
        "placement": {
          "type": "string",
          "enum": [
            "top",
            "bottom",
            "left",
            "right"
          ],
          "description": "Placement of the reaction picker popover",
          "default": "top"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "reactions": {
          "type": "array",
          "description": "Array of reaction objects",
          "items": {
            "type": "object",
            "properties": {
              "emoji": {
                "type": "string",
                "description": "Emoji string"
              },
              "count": {
                "type": "number",
                "description": "Number of reactions",
                "minimum": 0
              },
              "users": {
                "type": "array",
                "description": "Array of user names who reacted",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "emoji"
            ]
          }
        },
        "triggerElement": {
          "description": "HTMLElement or selector string for trigger element"
        }
      }
    }
  },
  "id": "XWUIReactionSelector"
}
