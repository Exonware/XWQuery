{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "viewerId": {
      "type": "string",
      "description": "ID of the current viewer/user"
    },
    "autoScroll": {
      "type": "boolean",
      "default": true
    },
    "className": {
      "type": "string"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"
        ]
      }
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          },
          "senderId": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "content",
          "timestamp",
          "senderId"
        ]
      }
    }
  },
  "required": [
    "contributors",
    "messages",
    "viewerId"
  ],
  "id": "XWUIThread"
}
