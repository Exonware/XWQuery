{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/xwui-transfer-list.schema.json",
  "title": "XWUITransferList Schema",
  "description": "Schema for XWUITransferList component - describes both conf_comp (component configuration) and data (component data)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "showSearch": {
          "type": "boolean",
          "description": "Whether to show search inputs",
          "default": true
        },
        "showSelectAll": {
          "type": "boolean",
          "description": "Whether to show select all buttons",
          "default": true
        },
        "titles": {
          "type": "array",
          "description": "Column titles [source, target]",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2,
          "default": [
            "Source",
            "Target"
          ]
        },
        "operations": {
          "type": "array",
          "description": "Operation button labels [toTarget, toSource]",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2,
          "default": [
            ">",
            "<"
          ]
        },
        "listStyle": {
          "type": "object",
          "description": "Custom list styles"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "sourceItems": {
          "type": "array",
          "description": "Items in source list",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "disabled": {
                "type": "boolean"
              }
            },
            "required": [
              "id",
              "label"
            ]
          }
        },
        "targetItems": {
          "type": "array",
          "description": "Items in target list",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "disabled": {
                "type": "boolean"
              }
            },
            "required": [
              "id",
              "label"
            ]
          }
        },
        "selectedSourceKeys": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IDs of selected source items"
        },
        "selectedTargetKeys": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IDs of selected target items"
        }
      },
      "required": [
        "sourceItems",
        "targetItems"
      ]
    }
  },
  "id": "XWUITransferList"
}
