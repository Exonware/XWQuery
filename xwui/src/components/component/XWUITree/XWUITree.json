{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "XWUITree",
  "name": "XWUI Tree Component",
  "description": "Tree structure display component with expand/collapse and selection capabilities. Supports hierarchical data, node selection (single or multiple), icons, and disabled states. Useful for file browsers, navigation, and hierarchical data display.",
  "path": "display.tree",
  "tags": ["display", "tree", "hierarchy", "nodes", "selection", "desktop", "mobile", "tablet"],
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "selectable": {
          "type": "boolean",
          "description": "Whether nodes can be selected",
          "default": false
        },
        "multiple": {
          "type": "boolean",
          "description": "Whether multiple nodes can be selected",
          "default": false
        },
        "showIcons": {
          "type": "boolean",
          "description": "Whether to show icons for nodes",
          "default": true
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name for the tree"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "nodes": {
          "type": "array",
          "description": "Array of tree nodes (hierarchical structure)",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the node"
              },
              "label": {
                "type": "string",
                "description": "Label text for the node"
              },
              "icon": {
                "type": "string",
                "description": "SVG icon HTML string for the node"
              },
              "children": {
                "type": "array",
                "description": "Child nodes (recursive structure)",
                "items": {
                  "description": "XWUITreeNode (recursive)"
                }
              },
              "expanded": {
                "type": "boolean",
                "description": "Whether the node is initially expanded"
              },
              "selected": {
                "type": "boolean",
                "description": "Whether the node is selected"
              },
              "disabled": {
                "type": "boolean",
                "description": "Whether the node is disabled"
              }
            },
            "required": ["id", "label"]
          }
        }
      },
      "required": ["nodes"]
    }
  }
}

