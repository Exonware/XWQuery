{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/xwtypingindicator.schema.json",
  "title": "XWUITypingIndicator Schema",
  "description": "Schema for XWUITypingIndicator component - describes both conf_comp (component configuration) and data (component data)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "userName": {
          "type": "string",
          "description": "Name of the user who is typing"
        },
        "showAvatar": {
          "type": "boolean",
          "description": "Whether to show user avatar",
          "default": false
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL of the user avatar image"
        },
        "animationSpeed": {
          "type": "string",
          "enum": [
            "slow",
            "normal",
            "fast"
          ],
          "description": "Speed of the typing animation",
          "default": "normal"
        },
        "autoHide": {
          "type": "boolean",
          "description": "Whether to automatically hide after delay",
          "default": false
        },
        "autoHideDelay": {
          "type": "number",
          "description": "Delay in milliseconds before auto-hiding",
          "default": 5000,
          "minimum": 0
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "visible": {
          "type": "boolean",
          "description": "Whether the indicator is visible",
          "default": false
        },
        "users": {
          "type": "array",
          "description": "Array of user names who are typing",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "id": "XWUITypingIndicator"
}
