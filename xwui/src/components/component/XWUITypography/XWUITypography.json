{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "XWUITypography",
  "name": "XWUI Typography Component",
  "description": "Typography/text component with various variants and styling options. Supports heading variants (h1-h6), body text, caption, overline, custom HTML elements, text alignment, colors, and no-wrap option.",
  "path": "display.typography",
  "tags": ["display", "typography", "text", "heading", "desktop", "mobile", "tablet"],
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "variant": {
          "type": "string",
          "enum": ["h1", "h2", "h3", "h4", "h5", "h6", "body", "caption", "overline"],
          "description": "Typography variant/style",
          "default": "body"
        },
        "component": {
          "type": "string",
          "enum": ["h1", "h2", "h3", "h4", "h5", "h6", "p", "span", "div"],
          "description": "HTML element to render"
        },
        "align": {
          "type": "string",
          "enum": ["left", "center", "right", "justify"],
          "description": "Text alignment"
        },
        "color": {
          "type": "string",
          "enum": ["primary", "secondary", "tertiary", "error", "success", "warning"],
          "description": "Text color variant"
        },
        "noWrap": {
          "type": "boolean",
          "description": "Whether to prevent text wrapping",
          "default": false
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name for the typography element"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "text": {
          "type": "string",
          "description": "Text content to display (required)"
        }
      },
      "required": ["text"]
    }
  }
}

