{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "bordered": {
      "type": "boolean",
      "default": true
    },
    "striped": {
      "type": "boolean",
      "default": false
    },
    "hoverable": {
      "type": "boolean",
      "default": true
    },
    "size": {
      "type": "string",
      "enum": [
        "small",
        "medium",
        "large"
      ],
      "default": "medium"
    },
    "selectable": {
      "type": "boolean",
      "default": false
    },
    "pagination": {
      "type": "boolean",
      "default": false
    },
    "pageSize": {
      "type": "number",
      "default": 10
    },
    "className": {
      "type": "string"
    },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "dataIndex": {
            "type": "string"
          },
          "width": {
            "type": "string"
          },
          "align": {
            "type": "string",
            "enum": [
              "left",
              "center",
              "right"
            ]
          },
          "sortable": {
            "type": "boolean"
          },
          "filterable": {
            "type": "boolean"
          },
          "className": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "label"
        ]
      }
    },
    "data": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  },
  "required": [
    "columns",
    "data"
  ],
  "id": "XWUIDataGrid"
}
