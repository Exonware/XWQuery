{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/xwpivottable.schema.json",
  "title": "XWUIPivotTable Schema",
  "description": "Schema for XWUIPivotTable component - describes both conf_comp (component configuration) and data (component data)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "showFieldPanel": {
          "type": "boolean",
          "description": "Whether to show the field configuration panel",
          "default": true
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "fields": {
          "type": "array",
          "description": "Array of field definitions",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique field identifier"
              },
              "label": {
                "type": "string",
                "description": "Field display label"
              },
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "number",
                  "date"
                ],
                "description": "Field data type"
              },
              "dataIndex": {
                "type": "string",
                "description": "Property name in data objects"
              }
            },
            "required": [
              "id",
              "label",
              "type",
              "dataIndex"
            ]
          }
        },
        "data": {
          "type": "array",
          "description": "Array of data objects to pivot",
          "items": {
            "type": "object"
          }
        },
        "config": {
          "type": "object",
          "description": "Pivot table configuration",
          "properties": {
            "rows": {
              "type": "array",
              "description": "Array of field IDs for row grouping",
              "items": {
                "type": "string"
              }
            },
            "columns": {
              "type": "array",
              "description": "Array of field IDs for column grouping",
              "items": {
                "type": "string"
              }
            },
            "values": {
              "type": "array",
              "description": "Array of value field configurations",
              "items": {
                "type": "object",
                "properties": {
                  "fieldId": {
                    "type": "string",
                    "description": "Field ID"
                  },
                  "aggregation": {
                    "type": "string",
                    "enum": [
                      "sum",
                      "count",
                      "average",
                      "max",
                      "min"
                    ],
                    "description": "Aggregation function"
                  }
                },
                "required": [
                  "fieldId",
                  "aggregation"
                ]
              }
            },
            "filters": {
              "type": "array",
              "description": "Array of field IDs for filtering",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "required": [
        "fields",
        "data"
      ]
    }
  },
  "id": "XWUIPivotTable"
}
