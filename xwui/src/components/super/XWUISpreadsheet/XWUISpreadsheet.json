{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/xwspreadsheet.schema.json",
  "title": "XWUISpreadsheet Schema",
  "description": "Schema for XWUISpreadsheet component - describes both conf_comp (component configuration) and data (component data)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "conf_comp": {
      "type": "object",
      "title": "Component Configuration (conf_comp)",
      "description": "Component-specific settings set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "rows": {
          "type": "number",
          "description": "Number of rows in the spreadsheet",
          "default": 100,
          "minimum": 1,
          "maximum": 10000
        },
        "columns": {
          "type": "number",
          "description": "Number of columns in the spreadsheet",
          "default": 26,
          "minimum": 1,
          "maximum": 702
        },
        "showToolbar": {
          "type": "boolean",
          "description": "Whether to show the toolbar",
          "default": true
        },
        "showFormulaBar": {
          "type": "boolean",
          "description": "Whether to show the formula bar",
          "default": true
        },
        "showRowNumbers": {
          "type": "boolean",
          "description": "Whether to show row numbers",
          "default": true
        },
        "showColumnHeaders": {
          "type": "boolean",
          "description": "Whether to show column headers (A, B, C, etc.)",
          "default": true
        },
        "freezeRows": {
          "type": "number",
          "description": "Number of rows to freeze at the top",
          "default": 0,
          "minimum": 0
        },
        "freezeColumns": {
          "type": "number",
          "description": "Number of columns to freeze on the left",
          "default": 0,
          "minimum": 0
        },
        "className": {
          "type": "string",
          "description": "Additional CSS class name"
        }
      }
    },
    "data": {
      "type": "object",
      "title": "Component Data",
      "description": "Data to update the component, set when initializing the component",
      "additionalProperties": false,
      "properties": {
        "data": {
          "type": "array",
          "description": "Array of row objects containing cell data",
          "items": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "value": {
                  "description": "Cell value (string or number)"
                },
                "formula": {
                  "type": "string",
                  "description": "Cell formula (starts with =)"
                },
                "format": {
                  "type": "string",
                  "enum": [
                    "text",
                    "number",
                    "currency",
                    "percentage",
                    "date"
                  ],
                  "description": "Cell format type"
                },
                "style": {
                  "type": "object",
                  "properties": {
                    "bold": {
                      "type": "boolean",
                      "description": "Bold text"
                    },
                    "italic": {
                      "type": "boolean",
                      "description": "Italic text"
                    },
                    "color": {
                      "type": "string",
                      "description": "Text color"
                    },
                    "backgroundColor": {
                      "type": "string",
                      "description": "Background color"
                    }
                  }
                },
                "comment": {
                  "type": "string",
                  "description": "Cell comment"
                }
              }
            }
          }
        },
        "activeCell": {
          "type": "string",
          "description": "Currently active cell ID (e.g., 'A1')",
          "pattern": "^[A-Z]+\\d+$"
        },
        "selectedRange": {
          "type": "string",
          "description": "Selected cell range (e.g., 'A1:B5')",
          "pattern": "^[A-Z]+\\d+:[A-Z]+\\d+$"
        }
      }
    }
  },
  "id": "XWUISpreadsheet"
}
