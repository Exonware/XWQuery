{
  "id": "admin.users.detail",
  "name": "User Detail",
  "description": "Detail page showing comprehensive user information",
  "path": "/admin/users/:id",
  "conf_comp": {
    "pageType": "detail",
    "container": {
      "maxWidth": "1200px",
      "center": true,
      "padding": "2rem"
    },
    "layout": {
      "regions": {
        "breadcrumbs": true,
        "main": true,
        "actions": true
      },
      "grid": {
        "rows": "auto 1fr auto",
        "areas": "\"breadcrumbs\" \"main\" \"actions\""
      }
    }
  },
  "data": {
    "title": "User Details",
    "subtitle": "View user information",
    "breadcrumbs": {
      "component": "XWUIBreadcrumbs",
      "region": "breadcrumbs",
      "gridArea": "breadcrumbs",
      "conf_comp": {},
      "data": {
        "items": [
          { "label": "Home", "path": "/" },
          { "label": "Users", "path": "/admin/users" },
          { "label": "User Details", "path": "/admin/users/:id" }
        ]
      }
    },
    "main": [
      {
        "component": "XWUICard",
        "region": "main",
        "gridArea": "info",
        "conf_comp": {
          "variant": "outlined"
        },
        "data": {
          "title": "Basic Information",
          "content": "<div>[User details fields]</div>"
        }
      },
      {
        "component": "XWUICard",
        "region": "main",
        "gridArea": "activity",
        "conf_comp": {
          "variant": "outlined"
        },
        "data": {
          "title": "Activity",
          "content": "<div>[Activity timeline]</div>"
        }
      },
      {
        "component": "XWUITabs",
        "region": "main",
        "gridArea": "tabs",
        "span": 2,
        "conf_comp": {},
        "data": {
          "tabs": [
            { "label": "Permissions", "content": "[Permissions list]" },
            { "label": "Activity Log", "content": "[Activity log table]" },
            { "label": "Settings", "content": "[User settings form]" }
          ]
        }
      }
    ],
    "actions": {
      "component": "XWUIStack",
      "region": "actions",
      "gridArea": "actions",
      "conf_comp": {
        "direction": "row",
        "gap": "1rem",
        "justify": "end"
      },
      "data": {
        "children": [
          {
            "component": "XWUIButton",
            "conf_comp": { "variant": "outline" },
            "data": { "text": "Back" }
          },
          {
            "component": "XWUIButton",
            "conf_comp": { "variant": "primary" },
            "data": { "text": "Edit" }
          },
          {
            "component": "XWUIButton",
            "conf_comp": { "variant": "danger" },
            "data": { "text": "Delete" }
          }
        ]
      }
    }
  }
}

