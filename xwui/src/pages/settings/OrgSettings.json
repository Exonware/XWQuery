{
  "id": "settings.org",
  "name": "Organization Settings",
  "description": "Organization-level settings page with sidebar navigation and form sections",
  "path": "/settings/organization",
  "conf_comp": {
    "pageType": "settings",
    "container": {
      "maxWidth": "1200px",
      "center": true
    },
    "layout": {
      "regions": {
        "sidebar": true,
        "main": true
      },
      "grid": {
        "columns": "250px 1fr",
        "gap": "2rem"
      }
    }
  },
  "data": {
    "title": "Organization Settings",
    "subtitle": "Manage organization-wide settings",
    "sidebar": {
      "component": "XWUITabs",
      "region": "sidebar",
      "gridArea": "sidebar",
      "conf_comp": {
        "orientation": "vertical",
        "variant": "outlined"
      },
      "data": {
        "tabs": [
          { "label": "General", "value": "general" },
          { "label": "Members", "value": "members" },
          { "label": "Billing", "value": "billing" },
          { "label": "Integrations", "value": "integrations" }
        ]
      }
    },
    "main": {
      "component": "XWUIForm",
      "region": "main",
      "gridArea": "main",
      "conf_comp": {
        "variant": "outlined"
      },
      "data": {
        "fields": [
          {
            "component": "XWUIInput",
            "conf_comp": { "label": "Organization Name", "required": true },
            "data": { "value": "" }
          },
          {
            "component": "XWUIInput",
            "conf_comp": { "label": "Domain", "required": true },
            "data": { "value": "" }
          },
          {
            "component": "XWUITextarea",
            "conf_comp": { "label": "Description" },
            "data": { "value": "" }
          }
        ]
      },
      "targetId": "org-settings-form"
    }
  }
}

